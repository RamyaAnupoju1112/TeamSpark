@page "/Companies/Index"
@model ContosoCrafts.WebSite.Pages.Companies.IndexModel
@{
    ViewData["Title"] = "Index page";
}

<div class="container">
    <br />
    <form method="get">
        <div class="input-group">
            <input class="form-control" asp-for="Search" />
            <div class="input-group-append">
                <button type="submit" class=" btn btn-primary">Search</button>
            </div>
        </div>
        <span asp-validation-for="Search" class="text-danger"></span>
    </form>
    <br />
    <br />
    <table>
        <a asp-page="create" class="btn-link">Add company</a>
        <br>
        <td>
            <form asp-page-handler="sortAsc" method="post">
                <button type="submit" class="btn btn-default">A-Z</button>
            </form>
        </td>
        <td>
            <form asp-page-handler="sortDesc" method="post">
                <button type="submit" class="btn btn-default">Z-A</button>
            </form>
        </td>
    </table>
    <br>

    <table class="table table-bordered table-striped">
        <thead>

            <tr>
                <th>
                    Name
                </th>
                <th>H1B Support</th>
                <th>Job Role</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var company in Model.Companies)
            {
                <tr>
                    <td>@company.Name</td>
                    <td>@company.H1BSupport</td>
                    <td>@company.JobRoleName</td>
                    <td><a asp-page="Read" asp-route-id="@company.Id" class="btn btn-primary">Read</a> </td>
                    <td><a asp-page="Update" asp-route-id="@company.Id" class="btn btn-primary">Update</a> </td>
                    <td><a asp-page="Delete" asp-route-id="@company.Id" class="btn btn-danger">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
