@page "{id}"
@using ContosoCrafts.WebSite.Services
@inject JsonFileCompanyService CompanyService
@model ContosoCrafts.WebSite.Pages.Companies.UpdateModel

@{
    ViewData["Title"] = "Update page";
}
@if(string.IsNullOrEmpty(Model.Company.Name))
            {
                <h1>Create</h1>
}
else
            {
                <h1>Update</h1>
            }

<div class="container">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @Html.HiddenFor(x => x.Company.Id)


        <div class="form-group">
            <label asp-for="Company.Name" class="control-label"></label>
            <input asp-for="Company.Name" class="form-control" />
            <span asp-validation-for="Company.Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Company.H1BSupport" class="control-label"></label>
            <input asp-for="Company.H1BSupport" class="form-control" />
            <span asp-validation-for="Company.H1BSupport" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Company.JobRoleName" class="control-label"></label>
            <input asp-for="Company.JobRoleName" class="form-control" />
            <span asp-validation-for="Company.JobRoleName" class="text-danger"></span>
        </div>


        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </form>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}